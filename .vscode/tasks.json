{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Start Services in Docker -- Local Development
        {
            "label": "Start Docker Services -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "docker",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            // Use `"-p", "Hasura 3",` as the first arguments to use a different
            // Docker project name
            // Keywords: project_name, project-name, container name, container-name
            "args": ["compose", "--env-file", "./hasura/.env.local", "-p", "${input:docker-project-name}", "up", "-d"]
        },
        // Hasura Console -- Local Development
        {
            "label": "Hasura Console -- Local Development",
            "type": "shell",
            "dependsOn": "Start Docker Services -- Local Development",
            "isBackground": true,
            "command": "hasura",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/hasura"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["console", "--envfile", ".env.local"]
        },
        // Hasura Console -- CI Testing
        {
            "label": "Hasura Console -- CI Testing",
            "type": "shell",
            "isBackground": true,
            "command": "hasura",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/hasura"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["console", "--envfile", ".env.ci-test"]
        },
        // Action service -- Local Development
        {
            "label": "Actions Service -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/actions"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "dev"]
        },
        // Action service -- Heroku Local
        {
            "label": "Actions Service -- Heroku Local",
            "type": "shell",
            "isBackground": true,
            "command": "heroku",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["local", "web"]
        },
        // Actions service -- GraphQL Codegen
        {
            "label": "Actions service -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/actions"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "gql-cdg"]
        },
        // Real-time service -- GraphQL Codegen
        {
            "label": "Real-time service -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/realtime"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "gql-cdg"]
        },
        // Real-time service -- Local Development
        {
            "label": "Real-time Service -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/realtime"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "dev"]
        },
        // Playout service -- Local Development
        {
            "label": "Playout Service -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/playout"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "start:dev"]
        },
        // Playout service -- GraphQL Codegen
        {
            "label": "Playout service -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/playout"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "gql-cdg"]
        },
        // Frontend -- GraphQL Codegen
        {
            "label": "Frontend -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "graphql-codegen"]
        },
        // Frontend -- Local Development
        {
            "label": "Frontend -- Local Development",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["start"]
        },
        // Frontend -- Production Build
        {
            "label": "Frontend -- Production Build",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        },
        // Frontend -- Serve Production Build
        {
            "label": "Frontend -- Serve Production Build",
            "type": "shell",
            "command": "npx",
            "args": ["-y", "serve", "-s", "build", "-l", "3000"],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        // Prettier
        {
            "label": "Prettier: Format code",
            "type": "shell",
            "command": "npx",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["prettier", "--write", "."]
        },
        // Ngrok
        {
            "label": "Ngrok",
            "type": "shell",
            "command": "ngrok",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["start", "-config", "./ngrok.yml", "--all"]
        },
        // Packetriot
        {
            "label": "Packetriot",
            "type": "shell",
            "command": "pktriot",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["start", "--config", "pktriot.json"]
        },
        // Run All -- Local Development
        {
            "label": "Run All -- Local Development",
            "dependsOn": [
                "Hasura Console -- Local Development",
                "Actions Service -- Local Development",
                "Real-time Service -- Local Development",
                "Playout Service -- Local Development",
                "Frontend -- Local Development"
            ],
            "dependsOrder": "parallel",
            "isBackground": true,
            "problemMatcher": []
        },
        // Generate All - GraphQL Codegen
        {
            "label": "Generate All -- GraphQL Codegen",
            "dependsOn": [
                "Actions service -- GraphQL Codegen",
                "Real-time service -- GraphQL Codegen",
                "Playout service -- GraphQL Codegen",
                "Frontend -- GraphQL Codegen"
            ],
            "dependsOrder": "parallel",
            "isBackground": true,
            "problemMatcher": []
        },
        // Bootstrap AWS
        {
            "label": "Bootstrap AWS account",
            "detail": "AWS CDK requires the account to be 'bootstrapped' first.",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/aws",
                "env": {
                    "DOTENV_CONFIG_PATH": ".env.${input:aws-profile-name}",
                    "AWS_PROFILE": "${input:aws-profile-name}"
                }
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "bootstrap"]
        },
        // Deploy to AWS
        {
            "label": "Deploy to AWS",
            "detail": "Deploy all CDK stacks to an AWS account. You will be asked which profile you want to deploy to.",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/aws",
                "env": {
                    "DOTENV_CONFIG_PATH": ".env.${input:aws-profile-name}",
                    "AWS_PROFILE": "${input:aws-profile-name}"
                }
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "deploy:all"]
        }
    ],
    "inputs": [
        {
            "id": "docker-project-name",
            "description": "Docker project name",
            "default": "clowdr",
            "type": "promptString"
        },
        {
            "id": "aws-profile-name",
            "description": "AWS profile name",
            "default": "sandbox",
            "type": "promptString"
        }
    ]
}
