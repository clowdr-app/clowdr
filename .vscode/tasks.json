{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Start Hasura Service -- Local Development
        {
            "label": "Start Hasura Service -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "docker-compose",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/hasura"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            // Use `"-p", "Hasura 3",` as the first arguments to use a different
            // Docker project name
            // Keywords: project_name, project-name, container name, container-name
            "args": ["--env-file", ".env.local", "up", "-d"]
        },
        // Hasura Console -- Local Development
        {
            "label": "Hasura Console -- Local Development",
            "type": "shell",
            "dependsOn": "Start Hasura Service -- Local Development",
            "isBackground": true,
            "command": "hasura",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/hasura"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["console", "--envfile", ".env.local"]
        },
        // Hasura Console -- CI Testing
        {
            "label": "Hasura Console -- CI Testing",
            "type": "shell",
            "isBackground": true,
            "command": "hasura",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/hasura"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["console", "--envfile", ".env.ci-test"]
        },
        // Action service -- Local Development
        {
            "label": "Actions Service -- Local Development",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/actions"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "dev"]
        },
        // Action service -- Heroku Local
        {
            "label": "Actions Service -- Heroku Local",
            "type": "shell",
            "isBackground": true,
            "command": "heroku",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["local", "web"]
        },
        // Actions service -- GraphQL Codegen
        {
            "label": "Actions service -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/services/actions"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "gql-cdg"]
        },
        // Shared -- GraphQL Codegen
        {
            "label": "Shared -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/shared"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "graphql-codegen"]
        },
        // Frontend -- GraphQL Codegen
        {
            "label": "Frontend -- GraphQL Codegen",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["run", "graphql-codegen"]
        },
        // Frontend -- Local Development
        {
            "label": "Frontend -- Local Development",
            "type": "shell",
            "command": "npm",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["start"]
        },
        // Run All -- Local Development
        {
            "label": "Run All -- Local Development",
            "dependsOn": [
                "Hasura Console -- Local Development",
                "Actions Service -- Local Development",
                "Frontend -- Local Development",
                "Ngrok"
            ],
            "dependsOrder": "parallel",
            "isBackground": true,
            "problemMatcher": []
        },
        // Frontend -- Production Build
        {
            "label": "Frontend -- Production Build",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        },
        // Frontend -- Serve Production Build
        {
            "label": "Frontend -- Serve Production Build",
            "type": "shell",
            "command": "serve",
            "args": ["-s", "build"],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            }
        },
        // Prettier
        {
            "label": "Prettier: Format code",
            "type": "shell",
            "command": "npx",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["prettier", "--write", "."]
        },
        // Ngrok
        {
            "label": "Ngrok",
            "type": "shell",
            "command": "ngrok",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": ["start", "-config", "./ngrok.yml", "--all"]
        }
    ]
}
